<Window x:Class="YouTubeRandomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeRandomizer"
        mc:Ignorable="d"
        Title="Youtube Video Randomizer" Height="600" Width="800" Icon="yt-icon.ico">
    <Grid Background="#000">
        <TextBox x:Name="tbxVideoId" HorizontalAlignment="Left" Height="23" Margin="10,14,0,0" TextWrapping="Wrap" Text="Enter a Keyword" VerticalAlignment="Top" Width="176" />
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="191,14,0,0" VerticalAlignment="Top" Width="75" Click="btnSearch_Click" Height="23"/>
        <Label x:Name="lblVideoTitle" Content="" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="256"/>
        <WebBrowser x:Name="wbYouTubePlayer" HorizontalAlignment="Left" Height="497" Margin="21,42,0,0" VerticalAlignment="Top" Width="746" Source="{x:Null}" Visibility="Hidden"/>

    </Grid>
</Window>
